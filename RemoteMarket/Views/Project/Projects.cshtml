@model IEnumerable<RemoteMarket.Models.Project>
<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="utf-8" />
    <title>project_element</title>
    <link rel="stylesheet" href="libs/font-awesome-4.2.0/css/font-awesome.min.css" />
</head>

<body>
    <div class="container">
        <div class="logo">
            <img src="~/img/LOGO.svg">
        </div>
        @foreach (var item in Model)
        {
            <div class="row row-flex project_container">
                <div class="col-md-3" style="background: url(~/img/глаза.jpg) no-repeat center center; background-size: contain; background-color: lightgrey;">
                </div>
                <div class="col-md-9">
                    <div class="row">
                        <div class="col-md-8 project_name">
                            <a>@item.Subject</a>
                        </div>
                        <div class="col-md-4 project_price">
                            9998-9999 грн.
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 project_category">
                            Метал>Залізо>Гараж
                        </div>
                        <div class="col-md-6 project_terms">
                            @item.Duration
                        </div>
                    </div><br>

                    <div class="row">
                        <div class="col-md-12 project_description">
                            @item.Description
                        </div>
                    </div><br>

                    <div class="row">
                        <div class="col-md-6 project_date">
                            21.12.12
                        </div>
                        <div class="col-md-6 project_location">
                            Белгород-Днестровский, Железнодорожный
                        </div>

                    </div>
                </div>
            </div>
            <br>
        }
        
    </div>
</body>
</html>
<br><br><br><br><br>

